{
  "private": true,
  "version": "6.0.0",
  "scripts": {
    "build": "npm run webpack -- --mode production",
    "build:dev": "npm run webpack -- --mode development",
    "deploy": "npm run zip && ./scripts/deploy.sh",
    "down": "docker-compose down -v",
    "import-posts": "npm run wp -- plugin install --activate wordpress-importer && npm run wp -- import /docker-entrypoint-initwp.d/test-posts.xml --authors=skip && npm run wp -- plugin uninstall --deactivate wordpress-importer",
    "lint": "npm run lint:scss && npm run lint:ts",
    "lint:scss": "npx stylelint \"**/*.scss\"",
    "lint:ts": "npx eslint src",
    "start": "npm run build:dev -- --watch",
    "test": "jest --coverage && npm run lint",
    "test-ci": "jest --coverage --runInBand && npm run build",
    "up": "docker-compose up -d && docker-compose logs -f wordpress",
    "update-styles": "ts-node --project ./scripts/tsconfig.json ./scripts/update-styles.ts",
    "webpack": "export NODE_OPTIONS=--openssl-legacy-provider && TS_NODE_PROJECT=./tsconfig.node.json TS_NODE_FILES=true npx webpack",
    "wp": "docker-compose exec wordpress wp",
    "zip": "npm run build && ./scripts/zip.sh",
    "zip:dev": "npm run build:dev && ./scripts/zip.sh"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/{__mocks__,__tests__}/**"
    ],
    "coverageDirectory": "node_modules/.cache/coverage",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.node.json"
      }
    },
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy",
      "^(utils|components)/(.*)$": "<rootDir>/src/js/$1/$2"
    },
    "preset": "ts-jest",
    "testEnvironmentOptions": {
      "url": "http://localhost"
    },
    "passWithNoTests": true
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,scss,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": "@dsifford/prettier-config",
  "dependencies": {
    "@wordpress/block-editor": "^15.12.0",
    "@wordpress/blocks": "^15.12.0",
    "@wordpress/components": "^32.1.0",
    "@wordpress/compose": "^7.39.0",
    "@wordpress/data": "^10.39.0",
    "@wordpress/dom-ready": "^4.39.0",
    "@wordpress/edit-post": "^8.39.0",
    "@wordpress/editor": "^14.39.0",
    "@wordpress/element": "^6.39.0",
    "@wordpress/i18n": "^6.12.0",
    "@wordpress/keycodes": "^4.39.0",
    "@wordpress/plugins": "^7.39.0",
    "@wordpress/rich-text": "^7.39.0",
    "@wordpress/url": "^4.39.0",
    "astrocite": "^0.16.4",
    "citeproc": "^2.4.63",
    "classnames": "^2.5.1",
    "dompurify": "^3.3.1",
    "fuse.js": "^7.1.0",
    "lodash": "^4.17.23",
    "react": "^18.3.1",
    "react-autosuggest": "^10.1.0",
    "react-dom": "^18.3.1",
    "string-hash": "^1.1.3",
    "tooltip.js": "^1.3.3",
    "typescript": "^4.9.5",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/plugin-transform-react-jsx": "^7.28.6",
    "@dsifford/prettier-config": "^0.5.0",
    "@dsifford/stylelint-config": "^0.4.20",
    "@eslint/js": "^9.17.0",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/browser-sync-webpack-plugin": "^2.2.5",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.23",
    "@types/mini-css-extract-plugin": "^2.5.1",
    "@types/node": "^25.2.3",
    "@types/react": "^18.3.18",
    "@types/react-autosuggest": "^10.1.11",
    "@types/react-dom": "^18.3.5",
    "@types/react-test-renderer": "^18.3.0",
    "@types/string-hash": "^1.1.3",
    "@types/webpack": "^5.28.5",
    "@types/wordpress__block-editor": "^15.0.3",
    "@types/wordpress__blocks": "^15.10.0",
    "@types/wordpress__dependency-extraction-webpack-plugin": "^2.7.0",
    "@types/wordpress__dom-ready": "^2.9.0",
    "@types/wordpress__edit-post": "^8.4.2",
    "@types/wordpress__element": "^2.14.1",
    "@types/wordpress__i18n": "^3.11.0",
    "@types/wordpress__url": "^2.14.0",
    "@wordpress/babel-plugin-makepot": "^6.39.0",
    "@wordpress/babel-preset-default": "^8.39.0",
    "@wordpress/browserslist-config": "^6.39.0",
    "@wordpress/dependency-extraction-webpack-plugin": "^6.39.0",
    "babel-loader": "^10.0.0",
    "browser-sync": "^3.0.4",
    "browser-sync-webpack-plugin": "^2.4.0",
    "camaro": "^6.2.3",
    "copy-webpack-plugin": "^9.1.0",
    "csl-json": "^0.1.0",
    "css-loader": "^7.1.4",
    "cssnano": "^7.1.2",
    "eslint": "^9.17.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "mini-css-extract-plugin": "^2.10.0",
    "postcss-loader": "^8.2.1",
    "postcss-preset-env": "^11.1.3",
    "prettier": "^3.8.1",
    "react-test-renderer": "^18.3.1",
    "rimraf": "^6.1.3",
    "rollup": "^4.57.1",
    "sass": "^1.94.0",
    "sass-loader": "^16.0.7",
    "style-loader": "^4.0.0",
    "stylelint": "^13.13.1",
    "stylelint-scss": "^3.21.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "typescript-eslint": "^8.18.0",
    "webpack": "^5.105.2",
    "webpack-cli": "^6.0.1"
  }
}
